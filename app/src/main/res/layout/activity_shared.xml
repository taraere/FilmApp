<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tara.filmapp.SharedActivity">

    <EditText
        android:id="@+id/editeTextOthers"
        android:layout_width="233dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ListView
        android:id="@+id/listViewOthers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-194dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editeTextOthers"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:padding="5sp"
        android:id="@+id/buttonOthers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        android:text="Search"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/editeTextOthers"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
